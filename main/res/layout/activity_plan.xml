<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#323232"
    android:backgroundTint="#323232">

    <TextView
        android:id="@+id/dayK"
        android:layout_width="343dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:textColor="#C5C5C5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dayT" />

    <TextView
        android:id="@+id/dayN"
        android:layout_width="344dp"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:textColor="#C5C5C5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dayK" />

    <TextView
        android:id="@+id/dayR"
        android:layout_width="344dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:textColor="#C5C5C5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dayN" />

    <TextView
        android:id="@+id/dayL"
        android:layout_width="345dp"
        android:layout_height="37dp"
        android:layout_marginTop="8dp"
        android:textColor="#C5C5C5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dayR" />

    <TextView
        android:id="@+id/dayP"
        android:layout_width="346dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:textColor="#C5C5C5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dayL" />

    <TextView
        android:id="@+id/planTitle"
        android:layout_width="120dp"
        android:layout_height="28dp"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif-medium"
        android:text="Trennikava"
        android:textAlignment="center"
        android:textColor="#C5C5C5"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dayE"
        android:layout_width="347dp"
        android:layout_height="42dp"
        android:layout_marginTop="48dp"
        android:textColor="#C5C5C5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/planTitle" />

    <TextView
        android:id="@+id/dayT"
        android:layout_width="344dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:textColor="#C5C5C5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dayE" />

    <TextView
        android:id="@+id/lastUpdate"
        android:layout_width="339dp"
        android:layout_height="36dp"
        android:layout_marginBottom="68dp"
        android:textColor="#C5C5C5"
        app:layout_constraintBottom_toTopOf="@+id/backButtonPlan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/backButtonPlan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#9F7E3D"
        android:onClick="back"
        android:text="Tagasi"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/retryPlanBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:onClick="retryPlanRequest"
        android:text="Lae plaan uuesti"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/planTitle" />

    <TextView
        android:id="@+id/spacer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="______________________________________________________"
        android:textColor="#9F7E3D"
        app:layout_constraintBottom_toTopOf="@+id/lastUpdate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>